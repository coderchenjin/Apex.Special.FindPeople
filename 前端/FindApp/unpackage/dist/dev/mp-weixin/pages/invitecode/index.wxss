
.invitecodebox {
	border: 1rpx solid #006699;
	padding: 20rpx;
	height: 300rpx;
}
.iline {
	display: inline-block;
}
.label {
	margin-top: 10rpx;
	padding: 10rpx 10rpx;
}
.zai-input {
	background: #C8C7CC;
}
.input-placeholder,
.zai-input {
	background: #C8C7CC;
	border-radius: 1rpx;
	padding: 5rpx 0rpx 5rpx 0rpx;
	font-size: 36rpx;
	overflow: visible;
}
.zai-btn {
	background: #1377E3;
	color: #fff;
	border: 0;
	border-radius: 20rpx;
	font-size: 36rpx;
	margin-top: 20rpx;
}
.zai-btn:after {
	border: 0;
}

/*按钮点击效果*/
.zai-btn.button-hover {
	-webkit-transform: translate(1rpx, 1rpx);
	    -ms-transform: translate(1rpx, 1rpx);
	        transform: translate(1rpx, 1rpx);
}

