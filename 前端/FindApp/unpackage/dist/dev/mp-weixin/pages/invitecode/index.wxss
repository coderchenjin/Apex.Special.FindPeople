
.invitecodebox {
	border: 1rpx solid #006699;
	padding: 20rpx;
	height: 400rpx;
	/* background-image: url('../../static/img/wb.png'); */
	z-index: 999999;
	position:relative;
	margin-top: 10%;
	background-color:#FFFFFF;
	border-color: #e0e0e0;
	border-radius: 10rpx;
}
.iline {
	display: inline-block;
}
.label {
	margin-top: 10rpx;
	padding: 10rpx 10rpx;
}

/* .input-placeholder, */
.zai-input {
	background: #C0C0C0;
	border-radius: 10rpx;
	padding: 5rpx 10rpx 5rpx 30rpx;
	font-size: 36rpx;
	overflow: visible;
}
.zai-btn {
	background: #1377E3;
	color: #fff;
	border: 0;
	border-radius: 20rpx;
	font-size: 36rpx;
	/* margin-top: 20upx; */
}
.zai-btn:after {
	border: 0;
}

/*按钮点击效果*/
.zai-btn.button-hover {
	-webkit-transform: translate(1rpx, 1rpx);
	    -ms-transform: translate(1rpx, 1rpx);
	        transform: translate(1rpx, 1rpx);
}

